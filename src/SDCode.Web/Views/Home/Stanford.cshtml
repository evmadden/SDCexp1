@model SDCode.Web.Models.StanfordViewModel
@using SDCode.Web.Classes
@{
    ViewData["Title"] = "Stanford";
}

<div class="text-right">
    <div style="background-color: Darkcyan;">  
        <img src="/img/Logo.png" style="width:200px;height:100px;"/> <!-- https://www.york.ac.uk/staff/external-relations/brand/logo/ -->
    </div>
</div>

<div class="text-align: left">
    <h1 class="display-4; text-center;">Stanford Sleepiness Scale</h1>
    <br/>
 <form action="/ImageCheck" method="POST">
    <input type="hidden" name="nextActionAfterImageCheck" value="@Url.Action("Index", "Encoding")" />
    <input type="hidden" name="participantID" value="@Model.ParticipantID" />
     <fieldset>
         <legend>This is a quick way to assess how alert you are feeling CURRENTLY.<br/>
            <br/>
            Please select the option that best describes how sleepy you are feeling right now.</legend>
            <br/>
         <div>
            <input type="radio" id="1" name="stanford" value="@((int)Sleepinesses.WideAwake)" required>
            <label for="1">Feeling active, vital, alert, or wide awake</label><br/>
            <input type="radio" id="2" name="stanford" value="@((int)Sleepinesses.FunctioningOffPeak)" required>
            <label for="2">Functioning at high levels, but not at peak; able to concentrate</label><br/>
            <input type="radio" id="3" name="stanford" value="@((int)Sleepinesses.AwakeButRelaxed)" required>
            <label for="3">Awake, but relaxed; responsive but not fully alert</label><br/>
            <input type="radio" id="4" name="stanford" value="@((int)Sleepinesses.SomewhatFoggy)" required>
            <label for="4">Somewhat foggy, let down</label><br/> 
            <input type="radio" id="5" name="stanford" value="@((int)Sleepinesses.SlowedDown)" required>
            <label for="5">Foggy; losing interest in remaining awake; slowed down</label><br/>
            <input type="radio" id="6" name="stanford" value="@((int)Sleepinesses.FightingSleep)" required>
            <label for="6">Sleepy, woozy, fighting sleep; prefer to lie down</label><br/>
            <input type="radio" id="7" name="stanford" value="@((int)Sleepinesses.SleepSoon)" required>
            <label for="7">No longer fighting sleep, sleep onset soon; having dream-like thoughts</label><br/>                                
        </div>       
        <br/>
        <div style="text-align: right;">
            <input style="margin-right: 50px;" type="submit" value="Next"/>
        </div>                                                                 
  </fieldset>
</form>
</div>