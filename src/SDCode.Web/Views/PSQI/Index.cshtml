@model PsqiIndexViewModel
@using SDCode.Web.Classes
@{
    ViewData["Title"] = "PSQI";
}

@await Html.PartialAsync("~/Views/Shared/LogoBanner.cshtml")

<div>
  <form action="@Url.Action("Epworth", "Home")" method="POST">
    <div class="orientationContainer rounded">
      <p>The following questions relate to your usual sleep habits during the past month only. 
      Your answers should include the most accurate reply for the majority of days and nights in the past month. 
      Please answer all questions.</p>
      <p>Reminder: Please respond in 24-hour time (e.g., 0700 or 2100)</p>
    </div>
    <fieldset>
        <legend><label for="q1">1. During the past month, when have you usually gone to bed at night?</label></legend>
        <div class="form-group">
            <input type="number" class="form-control" style="width: 90px" id="q1" name="monthbed">
        </div>
    </fieldset>
    <fieldset>
        <legend><label for="q2">2. During the past month, how long (in minutes) has it usually taken you to fall asleep each night?</label></legend>
        <div class="form-group">
            <input type="number" class="form-control" style="width: 90px" id="q2" name="monthlatency">
        </div>
    </fieldset>
    <fieldset>
        <legend><label for="q3">3. During the past month, when have you usually gotten up in the morning?</label></legend>
        <div class="form-group">
            <input type="number" class="form-control" style="width: 90px" id="q3" name="monthwake">
        </div>
    </fieldset>
    <fieldset>
      <legend><label for="q4hours">4. During the past month, how many hours of actual sleep did you get at night on average?</label></legend>
      <div class="form-row">
        <div class="col-auto">
          <label class="col-form-label" for="q4hours">Hours:</label>
        </div>
        <div class="col-auto">
          <input type="number" class="form-control" style="width: 75px;" id="q4hours" name="totalhours"> 
        </div>
        <div class="col-auto">
          <label class="col-form-label" for="q4mins">Minutes:</label>  
        </div>
        <div class="col-auto">
          <input type="number" class="form-control" style="width: 75px;" id="q4mins" name="totalminutes"> 
        </div>
      </div>
      <div class="form-row">
        <small class="form-text text-muted">(e.g., 7 hours, 20 minutes) This may be different than the number of hours spent in bed.</small>
      </div>
    </fieldset>
    <div class="orientationContainer rounded">
      <strong><p>For each of the remaining questions, check the one best response. Please answer all questions.</p>
      <p>During the past month, how often have you had trouble sleeping because you...</p></strong>
    </div>
    <fieldset>
      <legend><label>5. Cannot get to sleep within 30 minutes.</label></legend>
      <div class="form-row">
        <div class="col-auto">
          <input type="radio" id="q5.never" name="no30min" value="@((int)FrequenciesWeekly.NeverDuringLastMonth)"> <label for="q5.never">Never during the last month</label>
        </div>
        <div class="col-auto ml-4">
          <input type="radio" id="q5.lessthan" name="no30min" value="@((int)FrequenciesWeekly.LessThanOnceAWeek)"> <label for="q5.lessthan">Less than once a week</label>
        </div>
        <div class="col-auto ml-4">
          <input type="radio" id="q5.week" name="no30min" value="@((int)FrequenciesWeekly.OnceOrTwiceAWeek)"> <label for="q5.week">Once or twice a week</label>  
        </div>
        <div class="col-auto ml-4">
          <input type="radio" id="q5.morethan" name="no30min" value="@((int)FrequenciesWeekly.ThreeOrMoreTimesAWeek)"> <label for="q5.morethan">3 or more times a week</label>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <legend><label>6. Wake up in the middle of the night or early morning.</label></legend>
      <div class="form-row">
        <div class="col-auto">
          <input type="radio" id="q6.never" name="waso" value="@((int)FrequenciesWeekly.NeverDuringLastMonth)"> <label for="q6.never">Never during the last month</label>
        </div>
        <div class="col-auto ml-4">
          <input type="radio" id="q6.lessthan" name="waso" value="@((int)FrequenciesWeekly.LessThanOnceAWeek)"> <label for="q6.lessthan">Less than once a week</label>
        </div>
        <div class="col-auto ml-4">
          <input type="radio" id="q6.week" name="waso" value="@((int)FrequenciesWeekly.OnceOrTwiceAWeek)"> <label for="q6.week">Once or twice a week</label>
        </div>
        <div class="col-auto ml-4">
          <input type="radio" id="q6.morethan" name="waso" value="@((int)FrequenciesWeekly.ThreeOrMoreTimesAWeek)"> <label for="q6.morethan">3 or more times a week</label>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <legend><label>7. Have to get up to use the bathroom.</label></legend>
